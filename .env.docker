# Docker Compose Environment Variables
# Etapa 4: Configuração completa da infraestrutura
# ⚠️  APENAS PARA DESENVOLVIMENTO - NÃO USAR EM PRODUÇÃO! ⚠️

# =============================================================================
# DATABASE CONFIGURATION (DESENVOLVIMENTO)
# =============================================================================
POSTGRES_DB=forex_data
POSTGRES_USER=forex_user
POSTGRES_PASSWORD=forex_password_dev_2024
POSTGRES_PORT=5432
POSTGRES_HOST_AUTH_METHOD=scram-sha-256

# TimescaleDB específico
TIMESCALEDB_TELEMETRY=off

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_MAXMEMORY=256mb

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_PORT=8000
API_PREFIX=/api/v1
BUILD_TARGET=development

# Security (DESENVOLVIMENTO - TROCAR EM PRODUÇÃO!)
SECRET_KEY=forex-dev-secret-key-change-in-production-2024
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# FOREX SPECIFIC CONFIGURATION
# =============================================================================
FOREX_PAIR=EURUSD=X
DEFAULT_GRANULARITY=1h
DATA_RETENTION_DAYS=90

# External APIs (VAZIO PARA DESENVOLVIMENTO)
YAHOO_FINANCE_ENABLED=true
ALPHA_VANTAGE_API_KEY=
POLYGON_API_KEY=
FXCM_ACCESS_TOKEN=

# =============================================================================
# PREPROCESSING CONFIGURATION
# =============================================================================
ENABLE_PREPROCESSING=true
ENABLE_DATA_QUALITY=true
ENABLE_FEATURE_ENGINEERING=true
ENABLE_NORMALIZATION=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Grafana
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# Prometheus
PROMETHEUS_PORT=9090

# =============================================================================
# JUPYTER CONFIGURATION
# =============================================================================
JUPYTER_PORT=8888
JUPYTER_TOKEN=forex123

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# DATA STORAGE
# =============================================================================
DATA_PATH=./data

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================
# Usar apenas em desenvolvimento
COMPOSE_PROJECT_NAME=forex-pipeline