# ========================================
# FOREX EUR/USD Pipeline - Environment Variables
# Copie para .env e preencha os valores
# ========================================

# Application
APP_NAME="FOREX EUR/USD ML Pipeline"
APP_VERSION="0.1.0"
DEBUG=true
LOG_LEVEL="INFO"

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/api/v1"

# Data Sources
FOREX_PAIR="EURUSD=X"  # Yahoo Finance ticker
DEFAULT_GRANULARITY="1h"

# ========================================
# PREMIUM DATA SOURCES (ETAPA 6)
# ========================================

# Alpha Vantage (Free tier: 25 requests/day, Premium: unlimited)
# Get your free API key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=""

# Polygon.io (Professional tick data)
# Free tier: 5 requests/minute, Paid: unlimited
# Get API key at: https://polygon.io/
POLYGON_API_KEY=""

# FXCM (Professional forex data)
# Requires FXCM account with API access
# Get access token at: https://www.fxcm.com/uk/api/
FXCM_ACCESS_TOKEN=""
FXCM_ENVIRONMENT="demo"  # demo or live

# Data Quality Settings
DATA_QUALITY_THRESHOLD=0.95
MAX_LATENCY_MS=100
ENABLE_FAILOVER=true

# Alpha Vantage (Futuro - Etapa 9)
ALPHA_VANTAGE_API_KEY="your_api_key_here"
ALPHA_VANTAGE_ENABLED=false

# Database (Etapa 4)
POSTGRES_HOST="localhost"
POSTGRES_PORT=5432
POSTGRES_DB="forex_pipeline"
POSTGRES_USER="forex_user"
POSTGRES_PASSWORD="forex_password"

# Redis Cache (Etapa 7)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
CACHE_TTL_SECONDS=300  # 5 minutos

# Data Processing
REMOVE_OUTLIERS=true
OUTLIER_ZSCORE_THRESHOLD=3.0
DEFAULT_NORMALIZATION="minmax"

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_HISTORICAL_DAYS=1825  # ~5 anos
